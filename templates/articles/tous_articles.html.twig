{% extends 'base.html.twig' %}

{% block title %}All4Sport
{% endblock %}

{% block body %}
	<div class="all4sport">
		<link
		href="{{ asset('css/articles.css') }}" rel="stylesheet"/>

		<!-- Tout les Articles -->

		<div class="Articles">

			{% for article in articles %}
				<div class="card">
					<a href="{{ path('app_articles', {id: article.id}) }}">
						{% if article.lesImages is empty %}
							<img src="{{ asset( 'image/image_cassee.png' ) }}">
						{% else %}
							<img src="{{ asset( 'image/articles/' ~ article.lesImages[0].lienImage ) }}">
						{% endif %}
					</a>
					<div class="card-header">
						<h4 class="title">{{ article.nom }}</h4>
						<h4 class="price">{{ (article.prixUniHt * 1.2) | round(2) }}â‚¬</h4>
					</div>
					<div class="card-body">
						<p>{{ article.description }}</p>
					</div>
				</div>
			{% endfor %}

		</div>
		<!-- Fin de tout les Articles -->

		<div class="boutonWrapper">
			{% if page != 0 %}
				<a href="{{ path('app_articles', {page: page - 1}) }}" class="bouton">Page
					{{ page - 1 }}</a>
			{% endif %}

			<a href="{{ path('app_articles', {page: page + 1}) }}" class="bouton">Page
				{{ page + 1 }}</a>
		</div>
	</div>
{% endblock %}
